{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,

    // Modules
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Language and Environment
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Projects
    "composite": true,

   /**
    * Custom config - reverse over time as codebase is cleaned up
    */

    "strictPropertyInitialization": false, // overwrites strict `true`
    "useUnknownInCatchVariables": false, // overwrites strcit `true`
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
